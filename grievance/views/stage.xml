<?xml version="1.0" encoding="Big5" ?>
<odoo>
    <data>
<!--        stage model form view-->
        <record id="stage_view_form" model="ir.ui.view">
            <field name="name">Grievance: Stage View Form</field>
            <field name="model">stage</field>
            <field name="arch" type="xml">
                <form string="Stage Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--        stage model tree view-->
        <record id="stage_view_tree" model="ir.ui.view">
            <field name="name">Grievance: Stage View Tree</field>
            <field name="model">stage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>